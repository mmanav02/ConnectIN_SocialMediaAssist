{
  "manifest_version": 3,
  "name": "Streaml ConnectIN - Message Assist",
  "description": "Streaml Social Media Message Assist - Not affiliated with linkedin or X",
  "version": "0.1.3",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Social Media AI Outreach Assist"
  },
  "permissions": [
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "*://*.x.com/*",
    "*://*.twitter.com/*",
    "*://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://app.streaml.app/*",
        "https://www.x.com/*",
        "https://*.instagram.com/*",
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "world": "MAIN",
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://app.streaml.app/*", "<all_urls>"],
      "js": ["bridge.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "personas.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "128": "icons/128.jpg",
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  }
}